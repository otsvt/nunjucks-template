{% set actionItems = [
    {href: '#1', label: 'Все'},
    {href: '#2', label: 'Конвертировать'},
    {href: '#3', label: 'Редактировать'},
    {href: '#4', label: 'Безопасность'},
    {href: '#5', label: 'Картинки'},
    {href: '#6', label: 'Другое'}
  ]
%}
{% set currentAction = 'Все' %}

<ul class="flex flex-wrap gap-2">
  {% for action in actionItems %}
    <li>
      <a class="py-1 laptop:py-1.5 px-2 laptop:px-3 flex items-center justify-center text-xs laptop:text-base leading-4 laptop:leading-6 laptop:font-medium rounded-action shadow-action transition-opacity hover:opacity-80 active:opacity-80
        {% if action.label === currentAction %}
          text-primary-active bg-white
        {% else %}
          text-white bg-primary 
        {% endif %}
      " href="{{action.href}}">{{ action.label }}</a>
    </li>
  {% endfor %}
</ul>